<h1>All New Series Films</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Height</th>
    <th>Mass</th>
    <th>Hair color</th>
    <th>Skin color</th>
    <th>Eye color</th>
    <th>Birth year</th>
    <th>Gender</th>
  </tr>

<% @new_series_people.each do |person| %>
  <tr id="index_people_row_<%= person.id %>">
    <td><%= person.name %></td>
    <td><%= person.height %></td>
    <td><%= person.hair_color %></td>
    <td><%= person.skin_color %></td>
    <td><%= person.eye_color %></td>
    <td><%= person.birth_year %></td>
    <td><%= person.gender %></td>
    <td><%= link_to "Show", person %></td>
    <td><%= link_to "Remove", person, remote: true, method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to "Add New Series Person", new_new_series_person_path %>
